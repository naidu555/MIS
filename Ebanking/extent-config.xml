<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
	<configuration>
	
		<!-- report theme -->
		<!-- standard, dark -->
		<theme>dark</theme>
		
		<!-- document encoding -->
		<!-- defaults to UTF-8 -->
		<encoding>UTF-8</encoding>
		
		<!-- protocol for script and stylesheets -->
		<!-- defaults to https -->
		<protocol>https</protocol>
		
		<!-- title of the document -->
		<documentTitle>Extent Framework</documentTitle>
		
		<!-- report name - displayed at top-nav -->
		<reportName>Build 1</reportName>
		
		<!-- timestamp format -->
		<timeStampFormat>yyyy:MM:dd:HH:mm:ss</timeStampFormat>
		
		<!-- settings to enable/disable views -->
		<enableCategoryView>true</enableCategoryView>
		<enableAuthorView>false</enableAuthorView>
		<enableExceptionView>true</enableExceptionView>
		<enableTestRunnerLogsView>true</enableTestRunnerLogsView>
		
		<!-- custom javascript -->
		<scripts>
			<![CDATA[
				$(document).ready(function() {
				    $('.test').click(function() { console.log('test'); });
				});
			]]>
		</scripts>
		
		<!-- custom styles -->
		<styles>
			<![CDATA[
			 .test.active { border: 1px solid #ccc; }
			]]>
		</styles>
		
	</configuration>
</extentreports>